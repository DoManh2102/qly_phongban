<div style="width: 400px">
  <h1 class="text-center">Edit User Info</h1>

  <%= form_for @user, url: update_info_user_path, method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', required: true, :disabled => true %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :birthday %><br/>
      <%= f.text_field :birthday, class: "form-control" %>
    </div>

    <%= f.submit 'Update Info', class: 'btn btn-primary' %>
  <% end %>
</div>
