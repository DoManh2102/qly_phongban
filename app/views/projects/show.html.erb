<h2 class="text-center">Information Project</h2>
<h4>
  ** <%= @project.name %> **
</h4>
<strong>Number member: </strong> <%= @project.user_projects.length %><br/>

<div class="d-flex">
  <strong>Leader: </strong>
  <div class="ml-2">
    <% @users_leader.each do |user_leader| %>
      <%= user_leader.user.name %><br>
    <% end %>
  </div>
</div>

<br>

<h3 class="text-center">List User to Project</h3>

<%# if @project.user_projects.length <= 0 %>
<button class="btn-add btn btn-secondary">
  <%= link_to "+ Add New User to Project", new_project_user_project_path(@project) %>
</button>
<%# end %>

<table class="table mt-3">
  <thead>
  <tr class="thead-dark text-center">
    <th scope="col">STT</th>
    <th scope="col">User Name</th>
    <th scope="col">Role</th>
    <th scope="col">Department</th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <% @users_project.each_with_index do |user_project, index| %>
    <tr class="text-center">
      <td> <%= index + 1 %></td>
      <td> <%= user_project.user.name %></td>
      <!--      <td> <%#= user_project.project.name %></td>-->
      <td>
        <% if user_project.is_leader %>
          <%= "Leader" %>
        <% else %>
          <%= "employee" %>
        <% end %>
      </td>
      <td> <%= user_project.user.department&.name %></td>
      <td>
        <%= link_to "Detail", user_path(user_project.user.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_project_user_project_path(@project, user_project, user_project.user) %>
      </td>
      <td>
        <%= button_to "Destroy", project_user_project_path(@project, user_project), method: :delete, class: "btn btn-secondary" %>
      </td>
    </tr>
  <% end %>
  <tbody>
  </tbody>
</table>